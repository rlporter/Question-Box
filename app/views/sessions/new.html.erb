<% provide(:title, "Log in") %>
<h1>Log in</h1>

<header class='navbar navbar-fixed-top navbar-inverse'>
  <div class='container'>
    <%= link_to "StackJoverflow", '/', id: "logo" %>
    <nav>
      <ul class='nav navbar-nav navbar-right'>
        <% if logged_in? %>
        <li><%= link_to 'Ask a Question', new_post_path %></li>
        <li><%= link_to 'Question Index', posts_path %></li>
        <li><%= link_to 'Logout', logout_path %></li>
        <% else %>
        <li><%= link_to 'Login', login_path %></li>
      </ul>

    </nav>
    </div>
</header>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, url: login_path) do |f| %>

      <%= f.input :email, input_html: {class: 'form-control'} %>

      <%= f.input :password, input_html: {class: 'form-control'} %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
<% end %>
